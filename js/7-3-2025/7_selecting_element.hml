<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Selecting element</title>
</head>
<body>
  <h1>Selecting the html</h1>
  <p id="first_p">1. using getElemetById</p>
  <p class="sec_p">2. using getElementByClassName</p>
  <p id="thir_p">3. using querySelector</p>
  <script>
    //1. using getElementById
    const first_p = document.getElementById("first_p");
    first_p.style.color = "red";

    //2. using get ElementaryByClassName
    const sec_p = document.getElementsByClassName("sec_p");
    console.log(sec_p);
    sec_p[0].style.color = "green";

    //3. querySelector
    const thir_p = document.querySelector("#thir_p");
    thir_p.style.color = "purple";
  </script>
</body>
</html>